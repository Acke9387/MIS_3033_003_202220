<Window x:Class="JSON_RickAndMorty.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_RickAndMorty"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="cboCharacters" HorizontalAlignment="Left" Margin="65,123,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboCharacters_SelectionChanged"/>
        <Label Content="Select a character" HorizontalAlignment="Left" Margin="72,92,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnGetInfo" Content="Get Character Information" HorizontalAlignment="Left" Margin="42,185,0,0" VerticalAlignment="Top" Height="54" Width="166" Click="btnGetInfo_Click"/>
        <Image x:Name="imgCharacter" HorizontalAlignment="Left" Height="212" Margin="431,92,0,0" VerticalAlignment="Top" Width="332"/>
        <Label Content="Name :" HorizontalAlignment="Left" Margin="370,321,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="431,327,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>

    </Grid>
</Window>
