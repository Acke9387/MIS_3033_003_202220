<Window x:Name="wndMain" x:Class="P_FirstWpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P_FirstWpfApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FFED5F5F">
    <Grid>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="252,69,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Content="Please enter your name" HorizontalAlignment="Left" Margin="88,63,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBirthdate" HorizontalAlignment="Left" Margin="252,115,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Content="Please enter your birthdate" HorizontalAlignment="Left" Margin="88,109,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnCalculate" Content="Calculate Age" HorizontalAlignment="Left" Margin="201,205,0,0" VerticalAlignment="Top" Height="44" Width="111" IsDefault="True"/>
        <ListBox x:Name="lstOutput" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="446,0,0,0"/>

    </Grid>
</Window>
