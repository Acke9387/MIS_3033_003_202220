<Window x:Class="JSON_Serialization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_Serialization"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="cboPlatforms" HorizontalAlignment="Left" Margin="115,106,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboPlatforms_SelectionChanged"/>
        <ListBox x:Name="lstData" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,176,0,0"/>
        <Button x:Name="btnSaveData" Content="Export Data" HorizontalAlignment="Left" Margin="477,106,0,0" VerticalAlignment="Top" Click="btnSaveData_Click"/>

    </Grid>
</Window>
