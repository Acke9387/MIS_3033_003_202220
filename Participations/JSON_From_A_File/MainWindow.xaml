<Window x:Class="JSON_From_A_File.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_From_A_File"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="Pick_a_color" Content="Pick a color" HorizontalAlignment="Left" Margin="58,62,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cboColors" HorizontalAlignment="Left" Margin="82,93,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboColors_SelectionChanged"/>
        <ListBox x:Name="lstData" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,156,0,0"/>
        <Button x:Name="btnSaveData" Content="Save Data" HorizontalAlignment="Left" Margin="417,93,0,0" VerticalAlignment="Top" Height="42" Width="79" Click="btnSaveData_Click"/>

    </Grid>
</Window>
